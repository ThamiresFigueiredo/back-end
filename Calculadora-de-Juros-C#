/* 
Calculadora de Juros
Valor = valor do empréstimo;
Taxa = taxa cobrada;
Parcelas = número de parcelas;
Juros = valor correspondente aos juros cobrado sobre o valor do empréstimo; 
*/


Console.WriteLine("Digite o valor do empréstimo (apenas números, em caso de vírgulas use um ponto no lugar):");

string numValor = Console.ReadLine();
float Valor = float.Parse(numValor);

Console.WriteLine($"Digite a taxa cobrada (apenas o percentual sem o símbolo %):");

string numTaxa = Console.ReadLine();
float Taxa = (float.Parse(numTaxa) / 100);

Console.WriteLine($"Digite a quantidade de parcelas:");

string numParcelas = Console.ReadLine();
float Parcelas = float.Parse(numParcelas);

Console.WriteLine($"Juros = {(Taxa*Valor*Parcelas)}"); 
