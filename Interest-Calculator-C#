/*
Interest Calculator
Amount = loan amount;
Fee = fee charged;
Plots = number of plots;
Interest = amount corresponding to the interest charged on the loan amount;
*/


Console.WriteLine("Enter the loan amount (numbers only):");

string numAmount = Console.ReadLine();
float Amount = float.Parse(numAmount);

Console.WriteLine($"Enter the fee charged (only the percentage without the % symbol):");

string numFee = Console.ReadLine();
float Fee = (float.Parse(numFee) / 100);

Console.WriteLine($"Enter the number of plots:");

string numPlots = Console.ReadLine();
float Plots = float.Parse(numPlots);

Console.WriteLine($"Interest = {(Fee*Amount*Plots)}"); 
